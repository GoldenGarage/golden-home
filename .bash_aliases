# ---------------------------------------------------------------------------------------------------------------------
# em {file}
#    connect the tty to an emacs-server

function em()
{
    emacsclient --alternate-editor="" --tty $*
}

# ---------------------------------------------------------------------------------------------------------------------
# sem {file}
#    connect the tty to an emacs-server with root privileges

function sem()
{
    sudo bash -c "emacsclient --alternate-editor='' --tty $*"
}

